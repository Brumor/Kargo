<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/toolbarBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="KargoBlueButton">
        <item name="android:layout_margin">15dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/kargoBlueButton</item>
        <item name="android:textColor">#FFF</item>

    </style>
    
    <style name="AuthEditText">
        <item name="android:layout_margin">15dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ImageToMainMenu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:src">@drawable/ic_list_white_36dp</item>
        <item name="android:background">@color/backgroundGrey</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ActivityTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">7</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">25sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MenuItemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#aaa</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="OptionItemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="PlanningCheckbox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">14dp</item>
    </style>

    <style name="PlanningDayTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="PlanningRangeSeekBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">10</item>
    </style>

    <style name="PlanningRangeSeekBarMinMax">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="AssistanceSOSButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>
    
    <style name="ParametersTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ParametersItemText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="ComingDeliveryItemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">14dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
