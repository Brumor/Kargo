<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.kargo.HistoricActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:background="@color/backgroundGrey"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/account_activity_historic"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textSize="20sp"/>

            <ListView
                android:id="@+id/historic_listview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"></ListView>


        </LinearLayout>

        <Button
            android:id="@+id/end_historic_button"
            style="@style/KargoBlueButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:text="Fermer Historique"/>





    </LinearLayout>



</android.support.constraint.ConstraintLayout>
